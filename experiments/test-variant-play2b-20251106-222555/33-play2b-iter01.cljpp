PUSH-( defmethod apply-event :account-created
  PUSH-[ state event POP
  PUSH-( assoc state
    :id PUSH-( :account-id event POP
    :balance 0
    :status :active
  POP-ALL

PUSH-( defmethod apply-event :deposit
