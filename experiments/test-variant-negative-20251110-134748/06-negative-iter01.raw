(ns examples.program6)

(defn safe-divide [x y]
  (try
    {:status :ok :value (/ x y)}
    (catch ArithmeticException e
      {:status :error :message (.getMessage e)})))

(defn validate-user [user]
  (cond
    (nil? user)
    {:status :error :message "User is nil"}
    
    (empty? (:name user))
    {:status :error :message "Name cannot be empty"}
    
    (neg? (:age user))
    {:status :error :message "Age cannot be negative"}
    
    :else
    {:status :ok :value user}))
